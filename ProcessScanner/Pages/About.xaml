<UserControl x:Class="PhoneBook.Pages.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel>
                <TextBlock TextWrapping="Wrap">
                    ProcessScanner by Vasilevsky Alexander (C) 2017
                    <LineBreak /><LineBreak />
                    Goals: track process start/end.
                    <LineBreak /><LineBreak />
                    The application uses System.Data.SqlClient to access a DB using a specified connection string.
                    It allows to execute SQL scripts with GO separators. No transaction used.
                    <LineBreak /><LineBreak />
                    The application GUI is based on the ModernUI for WPF by the FirstFloor published under the terms of the Microsoft Public License (Ms-PL).
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
